<% layout("/layouts/boilerplate") %>
<body>
    <h3>All listings</h3>
    <form method="GET" action="/listings/new">
        <button>Create new Listing</button>
    </form>
          <div class="row row-col-lg-4 row-col-md-2 row-col-sm-1 ">
            <% for (let listing of allListings) { %>
              <a href="/listing/<%= listing._id %>" class="listing-link">
                <div class="card" style="width: 18rem;">
                  <img class="card-img-top" src="<%= listing.image.url %>" alt="Listing image"style="height: 20rem"> 
                  <div class="card-img-overlay">123</div>
                  <div class="card-body">
                    <h5 class="card-title"><%= listing.title %></h5>
                    <!-- <p class="card-description"><%= listing.description %></p> -->
                    <% if (listing.price != null) { %>
                      <span class="card-primary">&#8377;<%= listing.price.toLocaleString("en-IN") %> / night</span><br>
                  <% } else { %>
                      <span class="card-primary">Price not available</span><br>
                  <% } %>
                  </div>
                </div>
              </a>
            
            <% } %>
          </div>
        
      
</body>