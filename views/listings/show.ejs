<% layout("/layouts/boilerplate") %>
<body>
    
<div class="row mt-3">
<div class="col-8 offset-3">

    <h3>Lisitng details: </h3>

    <div class="card col-6 show-card">
        <img class="card-img-top show-img" src="<%= listing.image.url %>" alt="Card image cap">
        <div class="card-body">
        <p class="card-text">
            <b><%=listing.title %></b><br>
            <%=listing.description %> <br>
            <% if (listing.price != null) { %>
                <span class="card-primary">&#8377;<%= listing.price.toLocaleString("en-IN") %> / night</span><br>
            <% } else { %>
                <span class="card-primary">Price not available</span><br>
            <% } %>
            <%=listing.location %> <br>
            <%=listing.country %>
        </p>
    </div>
    <br>
    <div class="btns">
        <a class="btn btn-dark edt-btn col-2 offset-3" href="/listings/<%= listing._id%>/edit">Edit </a>
        <form method="post" action="/listings/<%=listing._id%>?_method=DELETE">
            <button class="btn btn-dark offset-5 ">Delete </button></form>
    </div>

    
</div>
</div>
</body>
